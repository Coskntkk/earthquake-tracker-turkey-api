{
    "openapi": "3.0.0",
    "info": {
        "title": "Earthquake Tracker Turkey API",
        "description": "A simple API to get earthquake data around Turkey from [Kandilli Observatory](http://www.koeri.boun.edu.tr/scripts/lst0.asp)",
        "contact": {
            "email": "coskntkk@gmail.com"
        },
        "version": "1.0.00"
    },
    "servers": [
        {
            "url": "https://api-earthquake-turkey.cyclic.app/api/v1"
        },
        {
            "url": "http://localhost:3001/api/v1"
        }
    ],
    "tags": [
        {
            "name": "Earthquake",
            "description": "Earthquake data"
        }
    ],
    "paths": {
        "/earthquakes": {
            "get": {
                "tags": [
                    "Earthquake"
                ],
                "summary": "Get all earthquakes",
                "description": "Get all earthquakes from Kandilli Observatory",
                "operationId": "getEarthquakes",
                "parameters": [
                    {
                        "name": "count",
                        "in": "query",
                        "description": "Number of last earthquakes to return",
                        "required": false,
                        "explode": true,
                        "schema": {
                            "type": "integer",
                            "default": 50,
                            "minimum": 1,
                            "maximum": 500
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number",
                        "required": false,
                        "explode": true,
                        "schema": {
                            "type": "integer",
                            "default": 1,
                            "minimum": 1
                        }
                    },
                    {
                        "name": "sort_by",
                        "in": "query",
                        "description": "Sort earthquakes by",
                        "required": false,
                        "explode": true,
                        "schema": {
                            "type": "string",
                            "default": "id",
                            "enum": [
                                "date",
                                "time",
                                "latitude",
                                "longitude",
                                "depth",
                                "magnitude",
                                "place",
                                "city"
                            ]
                        }
                    },
                    {
                        "name": "sort_type",
                        "in": "query",
                        "description": "Order of sorting",
                        "required": false,
                        "explode": true,
                        "schema": {
                            "type": "string",
                            "default": "asc",
                            "enum": [
                                "asc",
                                "desc"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Earthquake"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "An error occurred while fetching data from Kandilli Observatory",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "data": {
                                            "type": "null",
                                            "example": null
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Earthquake": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "date": {
                        "type": "string",
                        "format": "date",
                        "example": "2023-01-01"
                    },
                    "time": {
                        "type": "string",
                        "format": "time",
                        "example": "12:00:00"
                    },
                    "latitude": {
                        "type": "number",
                        "format": "float",
                        "example": 12.3456
                    },
                    "longitude": {
                        "type": "number",
                        "format": "float",
                        "example": 65.4321
                    },
                    "depth": {
                        "type": "number",
                        "format": "float",
                        "example": 12.3
                    },
                    "magnitude": {
                        "type": "number",
                        "format": "float",
                        "example": 4.2
                    },
                    "place": {
                        "type": "string",
                        "example": "YENÄ°MAHALLE"
                    },
                    "city": {
                        "type": "string",
                        "example": "ANKARA"
                    }
                    
                },
                "xml": {
                    "name": "order"
                }
            }
        }
    }
}